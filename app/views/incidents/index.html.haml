= content_for :sidebar do
  - nav_list do
    %li= link_to glyph(:home).concat(" Home"), incidents_path
    %li= link_to glyph(:plus_sign).concat(' New Interaction')
    %li= link_to glyph(:print).concat(' Print')
    %li= link_to glyph(:trash).concat(" Trash (#{incidents.trashed.size})"), trashcan_path

  %br
  %br



- cache incidents do
  #new_incident.well
    %h5 New Incident
    = render 'form'

  %h3= "Open Incidents (#{incidents.open.size})"
  = link_to glyph(:folder_close).concat(' Close All'), close_all_incidents_path,  method: :patch, data: {confirm: 'Are you sure?'}
  %br
  %br
  %table.table.table-bordered.table-striped.sortable
    %thead
      %tr
        %th Name
        %th Interactions
        %th Created
        %th Updated
    %tbody
      = render incidents.open
  %hr

  %h3= "Closed Incidents (#{incidents.closed.size})"
  = link_to glyph(:folder_open).concat(' Reopen All'), reopen_all_incidents_path  ,method: :patch, data: {confirm: 'Are you sure?'}
  %br
  %br
  %table.table.table-bordered.table-striped.sortable
    %thead
      %tr
        %th Name
        %th Interactions
        %th Created
        %th Updated
      %tbody
        = render incidents.closed


