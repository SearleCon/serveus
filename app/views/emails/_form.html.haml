#send_email_modal.modal.hide.fade{aria_hidden:  'true', aria_labelledby: 'sendEmaillabel', role: "dialog", tabindex: "-1"}
  .modal-header
    %button.close{aria_hidden: "true", data: {dismiss: "modal"}, type: "button"} Ã—
    %h3#sendEmailLabel Email
  = simple_form_for [incident, email],html: {class: 'form-vertical'}, defaults: { required: false, wrapper: false }, remote: true do |f|
    .modal-body
      #errors= errors_for (email)
      = f.input :from , input_html: {style: 'width: 90%;'}
      = f.input :to, placeholder: 'recipient@example.com', input_html: {style: 'width: 90%;'}
      = f.input :cc, placeholder: 'cc@example.com', input_html: {style: 'width: 90%;'}
      = f.input :subject, input_html: {style: 'width: 90%;'}
      = f.input :body, as: :text, input_html: { rows: 10 , style: 'width: 90%;' }
      = f.submit 'Send Mail', class: 'btn btn-primary'





