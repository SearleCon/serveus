= content_for :sidebar do
  - nav_list do
    %li= link_to glyph(:home).concat(" Home"), incidents_path
    %li= link_to glyph(:filter).concat(' Show/Hide Search'), '#', id: 'toggle_search'
    %li= link_to glyph(:refresh).concat(' Remove Filters/Show All'), incident_interactions_path(incident)
    %li= link_to glyph(:circle_arrow_left).concat(' Back'), :back

  %br
  %br

.search.well
  %h3 Search Interactions
  = render partial: 'search_form'

.search-results
  %h3= "Search Results (#{interactions.result(distinct: true).size})"
  %ul.inline
    %li.header Sort By:
    %li= sort_link interactions, :occurred, "Occurred", default_order: :desc
    %li.divider
    %li= sort_link interactions, :target_date, "Target Date", default_order: :desc
    %li.divider
    %li= sort_link interactions, :created, "Creation Date", default_order: :desc
    %li.divider
    %li= sort_link interactions, :title, "Title", default_order: :desc
    %hr
  - interactions.result(distinct: true).each do |interaction|
    = render 'search_result', interaction: interaction